@model List<RestaurantMenu.Models.Dish>

@{
    ViewData["Title"] = "MenuIndex";
}

<style>
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .col-6 {
        flex: 0 0 48%; /* Odpowiednik Bootstrapowej klasy col-6, z lekkim marginesem */
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease-in-out;
    }

        .col-6:hover {
            transform: scale(1.03);
        }

    img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .dish-name {
        font-size: 20px;
        color: #333;
        margin: 10px 0;
        font-weight: bold;
    }

    .dish-price {
        font-size: 18px;
        color: #666;
        margin-bottom: 10px;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var dish in Model)
        {
            <div class="col-6">
                <div class="dish-name">
                    @dish.Name
                </div>
                <div>
                    <img src="@dish.ImageUrl" alt="@dish.Name" />
                </div>
                <div class="dish-price">
                    @String.Format("{0:C}", dish.Price)
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@dish.Id">View Dish</a>
                </div>
            </div>
        }
    </div>
</div>
